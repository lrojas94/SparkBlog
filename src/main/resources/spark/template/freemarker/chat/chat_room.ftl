<div class="container">
    <div class="row">
        <!-- CHAT APP -->
        <div class="col-xs-12">
            <div class="pop-out">
                <div class="col-xs-12 title">
                    <h2>Chat Room</h2>
                </div>
                <div class="row">
                    <div id="chat" class="form-group col-xs-12 col-md-12">

                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-12 col-md-12">
                        <input type="text" class="form-control" name="user_name" placeholder="Type your username">
                    </div>
                    <div class="form-group col-xs-12 col-md-12">
                        <textarea rows="2" class="form-control" name="user_message" placeholder="Type your message here..."></textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <button type="submit" class="btn btn-primary btn-block">
                            Send
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>